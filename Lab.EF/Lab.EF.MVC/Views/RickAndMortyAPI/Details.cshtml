@model Lab.EF.MVC.Models.RickAndMortyAPI.Character
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<section class="m-auto d-flex flex-column justify-content-center align-items-center">
    <div class="col-4 d-flex justify-content-center">
        <img src=@Model.Image alt=@Model.Name class="img-thumbnail" />
    </div>

    <div class="col-8">
        <h3 class="text-center">@Model.Name</h3>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <b>Status:</b> @Model.Status
            </li>
            <li class="list-group-item">
                <b>Specie:</b> @Model.Species
            </li>
            <li class="list-group-item">
                <b>Gender:</b> @Model.Gender
            </li>
            <li class="list-group-item">
                <b>Location:</b> @Model.Location.Name
            </li>
            <li class="list-group-item">
                <b>Origin:</b> @Model.Origin.Name
            </li>
        </ul>
    </div>
</section>

@Html.ActionLink("Volver atrás", "Index", "RickAndMortyAPI", new { @class = "btn text-primary text-decoration-underline btn-block p-0 mt-1" })
