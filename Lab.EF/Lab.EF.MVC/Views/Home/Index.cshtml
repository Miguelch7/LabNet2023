@{
    ViewBag.Title = "Home";
}

<section class="container h-100">
    <div class="row my-auto justify-content-center">
        <div class="col-md-6 col-lg-4 column mx-5">
            <div class="card home-card gr">
                <div class="txt">
                    <h1>Categorías</h1>
                    <p>Liste, cree, edite y elimine las categorías de Northwind</p>
                </div>
                @Html.ActionLink("Ver más", "Index", "Categories")
                <div class="ico-card">
                    <i class="bi bi-tag-fill"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 column mx-5">
            <div class="card home-card gr">
                <div class="txt">
                    <h1>Proveedores</h1>
                    <p>Liste, cree, edite y elimine los proveedores de Northwind</p>
                </div>
                @Html.ActionLink("Ver más", "Index", "Suppliers")
                <div class="ico-card">
                    <i class="bi bi-tag-fill"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 column mx-5">
            <div class="card home-card gr">
                <div class="txt">
                    <h1>Rick y Morty API</h1>
                    <p>Liste y vea los detalles de los personajes de Rick y Morty</p>
                </div>
                @Html.ActionLink("Ver más", "Index", "RickAndMortyAPI")
                <div class="ico-card">
                    <i class="bi bi-tag-fill"></i>
                </div>
            </div>
        </div>
    </div>
</section>